pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/seraageldin/websitetest.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image for Nginx with the website files
                    sh 'docker build -t my-website-image .'
                }
            }
        }
        
        stage('Run Nginx Container') {
            steps {
                script {
                    // Stop any previous container to avoid conflicts
                    sh 'docker stop love-website-container || true && docker rm love-website-container || true'
                    
                    // Run the new container on port 8080
                    sh 'docker run -d --name love-website-container -p 8080:80 my-website-image'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up workspace after pipeline run
            cleanWs()
        }
    }
}
